
<div class="center-block" style="width:90%;">
	{{#link-to 'basket' classNames="btn text-white orange-juice-sun"}}
		<i class="fa fa-shopping-cart"></i> Votre panier. Total: {{basket.total}} FCFA
	{{/link-to}}
</div>
<div class="center-block" style="width:90%;">
	<br/>
</div>	
<div class="center-block" style="width:90%;">
    <ul class="list-unstyled">
      {{#each itemController="product"}}
      
        <li class="spacer">
        	<div class="row">
	            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
	            	{{!-- {{#link-to 'product' id}} --}}
	            	<img  {{bind-attr src=imageUrl}} alt="{{imageUrl}}" />
	           		<span class="lead gray-darker">{{aroma}}</span> <span class="wake-me-up"> {{price}} FCFA</span>
	           		{{!-- {{/link-to}} --}}
	            </div>
	            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7">
	           		{{view Ember.Select content=quantity selectionBinding='count'}}
	           		<button class="btn btn-primary btn-custom wheres-the-coffee" {{action "addToBasket"}}>
	            		<i class="fa fa-coffee fa-lg fa-inverse"></i> Ajouter au panier
	            	</button> 
	           	</div>
	           	<!--div class="col-xs-6 col-md-4">
	           		{{view Ember.Select content=quantity selectionBinding='count'}}
	           		<button class="btn btn-primary btn-custom" {{action "addToBasket"}}>
	            		+ <i class="fa fa-coffee fa-lg fa-inverse"></i>
	            	</button>
	            </div-->
	        </div>
        </li>
      {{/each}}
    </ul>
</div>
