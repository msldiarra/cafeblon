<div class="row center-block" style="min-height: 690px;">
      {{#each itemController="product"}}

      <div class="row col-xs-12 col-sm-6 col-md-4 col-lg-3 spacer center-block">
          <div class="full">
              <div class="row">
                    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 text-center">
                        <img {{bind-attr src=imageUrl}} alt="{{imageUrl}}" />
                    </div>
                    <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
                        <span class="lead gray-darker">{{aroma}}</span>
                        <br/>
                        <span class="">Description</span>
                        <br/>
                        <span class="wake-me-up"> {{price}} FCFA</span>
                        {{view Ember.Select content=quantity selectionBinding='count'}}
                    </div>
                      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center top-10">
                          <button class="btn btn-primary btn-custom wheres-the-coffee" {{action "addToBasket"}}>
                              <i class="fa fa-coffee fa-lg fa-inverse"></i> Ajouter au panier
                          </button>
                      </div>
                </div>

            </div>
        </div>
      {{/each}}
</div>
</div>

