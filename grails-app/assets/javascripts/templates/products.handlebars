    <div class="container">
        <a class="navbar-brand" href="#">Caféblon</a>
        <div class="pull-right" style="height: 50px; line-height: 50px; vertical-align: middle">
            {{#link-to 'basket' classNames="text-white"}}
                <i class="fa fa-shopping-cart"></i> Total: {{basket.total}} FCFA
            {{/link-to}}
        </div>
    </div>

